flush ruleset;

table ip tcp-limit {
	chain INPUT {
		type filter hook input priority filter; policy accept;
		tcp dport 5201 meter speed_limit { ip saddr . tcp sport limit rate 1 mbytes/second } accept;
		tcp dport 5201 counter drop;
	}
}

